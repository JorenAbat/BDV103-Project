    "koa-bodyparser": "^4.4.1",
    "mongodb": "^6.16.0",
    "tsoa": "^6.6.0",
    "tsx": "^4.19.1",
    "uuid": "^11.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/amqplib": "^0.10.1",
    "@types/koa": "^2.15.0",
    "@types/koa__cors": "^5.0.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/node": "^22.5.5",
    "eslint": "^9.27.0",
    "typescript": "^5.6.2",
    "vitest": "^3.1.4"
